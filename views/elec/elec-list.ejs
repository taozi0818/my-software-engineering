<% layout('/layout'); %>
<% block('title', '水电费管理'); %>
<% block('crumbs', '<li>水电费管理</li><li class="active">水电费管理</li>'); %>
<% stylesheet('/libs/select2/select2.min.css'); %>
<% script('/libs/select2/select2.min.js'); %>
<% script('/libs/select2/zh-CN.js'); %>
<% stylesheet('/libs/bootstrap/bootstrap.min.css'); %>
<% script('/libs/bootstrap/bootstrap.min.js'); %>
<% script('/app/elec/elec-list.js'); %>

<section class="content">
  <div class="box box-info">
    <div class="box-header">
      <h3 class="title">水电费管理列表</h3>
    </div>

    <div class="row">
      <div class="box-body">
        <div class="col-md-3 col-xs-12">
          <label for="house">门牌号</label>
          <select class="form-control" id="house"></select>
        </div>
        <div class="col-md-3 col-xs-12">
          <label for="status">状态</label>
          <select class="form-control" id="status">
            <option value="">请选择状态</option>
            <option value="ENABLE">启用</option>
            <option value="DISABLE">停用</option>
          </select>
        </div>
      </div>
    </div>

    <div class="box-footer text-right">
      <div class="row">
        <div class="col-md-6 col-xs-6 text-left">
          <button class="btn btn-default" id="btn-clear">清空</button>
        </div>
        <div class="col-md-6 col-xs-6 text-right">
          <button class="btn btn-info" id="btn-search">
            <i class="fa fa-search"></i> 搜索
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="box">
    <div class="box-header">
      <h3 class="box-title">列表</h3>
    </div>
    <div class="box-body table-responsive no-padding">
      <table class="table table-hover text-center">
        <thead>
        <tr>
          <th>#</th>
          <th>门牌号</th>
          <th>欠费</th>
          <th>状态</th>
          <th>操作</th>
        </tr>
        </thead>
        <tbody id="tb-elec">
        </tbody>
      </table>
    </div>
  </div>
  <div id="pager" class="text-center"></div>
</section>
