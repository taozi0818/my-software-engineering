<% layout('/layout'); %>
<% block('title', '账号管理'); %>
<% block('crumbs', '<li>账号管理</li><li class="active">修改密码</li>'); %>
<% stylesheet('/libs/bootstrap/bootstrap.min.css'); %>
<% script('/libs/bootstrap/bootstrap.min.js'); %>
<% stylesheet('/libs/fontawesome/font-awesome.min.css'); %>
<% script('/app/password/password.js'); %>
<% script('/libs/base64.min.js'); %>

<div class="row" id="container">
  <div class="col-xs-12 col-md-8 col-md-offset-2">
    <div class="box box-info">
      <div class="box-body">
        <form class="form-horizontal">
          <div class="form-group">
            <label for="old-password" class="col-md-2 col-xs-3 text-right control-label">
              <span style="color:#FF0000">* </span>旧密码
            </label>
            <div class="col-md-8 col-xs-8">
              <input type="password" class="form-control" id="old-password" placeholder="请输入您的旧密码">
            </div>
          </div>
          <div class="form-group">
            <label for="new-password" class="col-md-2 col-xs-3 text-right control-label">
              <span style="color:#FF0000">* </span>新密码
            </label>
            <div class="col-md-8 col-xs-8">
              <input type="password" class="form-control" id="new-password" placeholder="请输入您的新密码">
            </div>
          </div>
          <div class="form-group">
            <label for="new-password2" class="col-md-2 col-xs-3 text-right control-label">
              <span style="color:#FF0000">* </span>确认新密码
            </label>
            <div class="col-md-8 col-xs-8">
              <input type="password" class="form-control" id="new-password2" placeholder="请确认您的新密码">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-2 col-xs-3 text-right control-label">
            </label>
            <div class="col-md-8 col-xs-8">
              <p id="msg" style="color:red;"></p>
            </div>
          </div>
        </form>
      </div>
      <div class="box-footer text-center">
        <button type="button" class="btn btn-success" id="btn-change">确认</button>
      </div>
    </div>
  </div>
</div>
