<% layout('/layout'); %>
<% block('title', '用户管理'); %>
<% block('crumbs', '<li>用户管理</li><li class="active">用户管理</li>'); %>
<% stylesheet('/libs/bootstrap/bootstrap.min.css'); %>
<% script('/libs/bootstrap/bootstrap.min.js'); %>
<% script('/js/app/admin/list.js'); %>

<section class="content">
  <div class="box box-info" id="header">
    <div class="box-header">
      <h3 class="title">用户列表</h3>
    </div>

    <div class="row">
      <div class="box-body">
        <div class="col-md-3 col-xs-12">
          <label for="role">身份</label>
          <select class="form-control" id="input-role">
            <option value="">请选择</option>
            <option value="1">管理员</option>
            <option value="2">非管理员</option>
          </select>
        </div>
        <div class="col-md-3 col-xs-12">
          <label for="username">用户名</label>
          <input class="form-control" id="input-username">
        </div>
      </div>
    </div>

    <div class="box-footer text-right">
      <div>
        <button class="btn btn-info" id="btn-search">
          <i class="fa fa-search"></i> 搜索
        </button>
      </div>
    </div>
  </div>

  <div class="box">
    <div class="box-header">
      <h3 class="box-title">列表</h3>
      <div class="box-tools pull-right">
        <a class="btn btn-box-tool" href="/admin/user/form/page">
          <i class="fa fa-plus"></i> 增加
        </a>
      </div>
    </div>
    <div class="box-body table-responsive no-padding">
      <table class="table table-hover text-center">
        <thead>
        <tr>
          <th>#</th>
          <th>用户名</th>
          <th>绑定住房</th>
          <th>身份</th>
          <th>操作</th>
        </tr>
        </thead>
        <tbody id="tb-user">
        </tbody>
      </table>
    </div>
  </div>
  <div id="pager" class="text-center"></div>
</section>
